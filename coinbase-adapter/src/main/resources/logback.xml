<configuration>

    <!-- APPENDERS -->
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- LOGGERS -->
    <logger name="io.micronaut" additivity="false" level="INFO">
        <appender-ref ref="consoleAppender"/>
    </logger>
    <logger name="io.micronaut.http.client" additivity="false" level="DEBUG">
        <appender-ref ref="consoleAppender"/>
    </logger>
    <logger name="me.pysquad.cryptobot" additivity="false" level="DEBUG">
        <appender-ref ref="consoleAppender"/>
    </logger>

</configuration>
