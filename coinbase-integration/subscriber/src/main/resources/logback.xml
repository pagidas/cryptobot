<configuration>

    <!-- APPENDERS -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %cyan(%d{HH:mm:ss.SSS}) %white([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <!-- LOGGERS -->
    <logger name="me.pysquad.cryptobot" additivity="false" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>