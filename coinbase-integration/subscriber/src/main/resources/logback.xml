<configuration>

    <!-- APPENDERS -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>
                    %cyan(%d{HH:mm:ss.SSS}) %white([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n
                </Pattern>
            </encoder>
        </appender>
    </appender>

    <!-- LOGGERS -->
    <logger name="me.pysquad.cryptobot.subscriber" additivity="false" level="DEBUG">
        <appender-ref ref="ASYNC"/>
    </logger>

    <logger name="me.pysquad.cryptobot.http4k.starter" additivity="false" level="DEBUG">
        <appender-ref ref="ASYNC"/>
    </logger>

</configuration>